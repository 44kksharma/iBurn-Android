<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gaiagps.iburn.view.MapViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dip"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="48dip" />

    <EditText
        android:id="@+id/searchView"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="40dip"
        android:textColor="@color/white"
        android:alpha="0"
        android:scaleX=".01"
        android:translationX="330dp"
        android:animateLayoutChanges="true"
        android:visibility="visible"
        android:background="@color/highlight_comp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="bottom|right" />

    <at.markushi.ui.CircleButton
        android:id="@+id/searchBtn"
        android:alpha=".8"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_search"
        app:cb_color="@color/highlight_comp"
        app:cb_pressed_ring_width="8dip" />

    <at.markushi.ui.CircleButton
        android:id="@+id/unlockBtn"
        android:alpha=".8"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        android:src="@drawable/ic_unlock"
        android:onClick="showUnlockDialog"
        app:cb_color="@color/highlight_comp"
        app:cb_pressed_ring_width="8dip" />

</FrameLayout>
