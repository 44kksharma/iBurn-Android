<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true"><shape>
        <solid android:color="@color/list_item_bg_pressed"/>
    </shape></item>

    <!-- default -->
    <item><shape>
        <solid android:color="@color/list_item_bg"/>
    </shape></item>

</selector>