<?xml version="1.0" encoding="utf-8"?><!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected -->
    <item android:state_pressed="false" android:state_selected="true">
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="#b5dbd6d4" />
            <stroke android:width="1dp" android:color="#bf777777" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="#b5797775" />
            <stroke android:width="1dp" android:color="#bf777777" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="#b5faf7f5" />
            <stroke android:width="1dp" android:color="#bf777777" />
        </shape>
    </item>
</selector>