<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Iburn.Base" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Theme.Iburn" parent="Theme.Iburn.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Iburn</item>
    </style>

    <style name="ActionBar.Transparent.Iburn" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/off_blk</item>
    </style>

    <style name="PlayaTextItem" >
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#ff393939</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
